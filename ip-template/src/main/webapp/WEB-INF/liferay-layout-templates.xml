<?xml version="1.0"?>
<!DOCTYPE layout-templates PUBLIC "-//Liferay//DTD Layout Templates 6.2.0//EN" "http://www.liferay.com/dtd/liferay-layout-templates_6_2_0.dtd">

<layout-templates>
	<custom>
		<layout-template id="ip-template" name="ip-template">
			<template-path>/ip-template.tpl</template-path>
			<wap-template-path>/ip-template.wap.tpl</wap-template-path>
			<thumbnail-path>/ip-template.png</thumbnail-path>
		</layout-template>
		<layout-template id="ipmaintemplate" name="ip-main-template">
			<template-path>/ipmaintemplate.tpl</template-path>
			<wap-template-path>
				/ipmaintemplate.wap.tpl
			</wap-template-path>
			<thumbnail-path>/ipmaintemplate.png</thumbnail-path>
		</layout-template>
		<layout-template id="ipcontenttemplate"
			name="ipcontenttemplate">
			<template-path>/ipcontenttemplate.tpl</template-path>
			<wap-template-path>
				/ipcontenttemplate.wap.tpl
			</wap-template-path>
			<thumbnail-path>/ipcontenttemplate.png</thumbnail-path>
		</layout-template>
	</custom>
</layout-templates>